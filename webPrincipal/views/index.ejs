<!DOCTYPE html>
<html lang="en">

<head>
    <link href="css/index.css" rel="stylesheet">
    <%- include('./partials/head.ejs')%>
</head>


<body>
    <%- include('./partials/header.ejs')%>
        <main>
            <h2> PRODUCTOS DESTACADOS </h2>
            <div class="cuatro-destacados">
            <% for( let i = 0; i < destacados.length; i++ ) { %>
                <article class="producto">
                    <a href="/productDetail/<%=destacados[i].id %> " style="text-decoration: none;">
                        <img src="/images/products/<%= destacados[i].imagen %>" class="imag">
                    </a>
                    <div class="individual-producto">
                        <p class="description"><%= destacados[i].nombre %></p>
                        <p class="price">$<%= destacados[i].precio %></p>
                        <div class="talle-cantidad">
                            <p class="talle"> 
                                <select name="tallesselector">
                                    <option disabled selected>Talles</option> 
                                    <option><%= destacados[i].talle %></option>
                                </select>
                            </p>
                            <div class="carro-cantidad">
                                <div class="cantidad">
                                    <select name="cantidad ">
                                        <option disabled selected>Cantidad</option>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                        <option>6</option>
                                        <option>7</option>
                                        <option>8</option>
                                        <option>9</option>
                                        <option>10</option>
                                    </select>
                                </div>
                                <a href="#"><img src="/images/carritomonstruitos.png" class="icono-carro"></a>
                            </div>
                        </div>
                    </div>
                </article>
            <% } %>
            </div>
            <h2> NUESTRAS OFERTAS! </h2>   
            <div class="cuatro-ofertas">
                <% for( let i = 0; i < ofertas.length; i++ ) { %>
                <article class="producto">
                    <a href="/productDetail/<%=ofertas[i].id %>" style="text-decoration: none;">
                        <img src="/images/products/<%= ofertas[i].imagen %>" class="imag">
                    </a>
                    <div class="individual-producto">
                        <p class="description"><%=ofertas[i].nombre%></p>
                        <div class="price-discount">
                            <p class="price-oferta">$<%=ofertas[i].precio %></p>
                            <p class="discount">% <%=ofertas[i].descuento%></p>
                            <% if (ofertas[i].descuento) { %>
                                <%  
                                let precioFinal = ofertas[i].precio - ((ofertas[i].precio * ofertas[i].descuento)/ 100);
                                %> 
                                <p class="price-final">$<%=precioFinal%> </p>
                            <% } %>
                        </div>

                        <div class="talle-cantidad">
                            <p class="talle">
                                <select name="tallesselector">
                                    <option disabled selected>Talles</option> 
                                    <option><%= ofertas[i].talle %></option>
                                </select>
                            </p>
                            <div class="carro-cantidad">
                                <div class="cantidad">
                                    <select name="cantidad ">
                                        <option disabled selected>Cantidad</option> 
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                        <option>6</option>
                                        <option>7</option>
                                        <option>8</option>
                                        <option>9</option>
                                        <option>10</option>
                                    </select>
                                </div>
                                <a href="#"><img src="/images/carritomonstruitos.png" class="icono-carro"></a>
                            </div>
                        </div>
                    </div>
                </article>
                <% } %>
            </div>
            
            <img src="/images/niños-corriendo.webp" class="niños-corriendo"></a>

        </main>
    <%- include('./partials/footer.ejs')%>
</body>

</html>